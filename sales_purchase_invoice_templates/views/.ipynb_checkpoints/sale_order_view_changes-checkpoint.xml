<odoo>
  <data>
    <record id="custom_template_sale_view_form" model="ir.ui.view">
            <field name="name">custom.template.sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='sale_order_template_id']" position="after">
                    <field name="custom_template_id"/>
                </xpath>
            </field>
        </record>
  </data>
</odoo>