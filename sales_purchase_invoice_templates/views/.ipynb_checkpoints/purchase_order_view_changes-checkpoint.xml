<odoo>
  <data>
    <record id="custom_template_purchase_view_form" model="ir.ui.view">
            <field name="name">custom.template.purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="custom_template_id"/>
                </xpath>
            </field>
        </record>
  </data>
</odoo>