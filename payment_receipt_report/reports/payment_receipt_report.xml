            </div>
            
        </t>

    </template>

    <template id="payment_receipt_layout">
       
       <t t-if="not o" t-set="o" t-value="doc"/>
        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>

        <div t-attf-class="header o_company_#{company.id}_layout">
            <div class="o_boxed_header">
                <div class="row mb8">
                    <div class="col-6">
                        <!-- Company Logo -->
                       <div class="row" style="margin-top:30px;">
                            <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" alt="Logo" style="max-width: 300px; max-height: 250px;"/>
                        </div>
                        <!-- Company Address -->
                        <div class="row" style="margin-top:30px;">
                            <h4 class="mt0" t-field="o.company_id.report_header"/>
                            <div name="company_address" class="mb4" style="color:grey">
                                <span class="company_address" t-field="o.company_id.partner_id"
                                    t-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>
                            </div>
                        </div>
                    </div>
                    <div class="col-6 mb4">
                    </div>
                </div>
            </div>
        </div>

        <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout"  t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-call="web.address_layout"/>
            <t t-raw="0"/>
        </div>

        <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
            <div class="text-center">
                
            <div style="border-top:1px solid black;border-bottom:1px solid black;">
            <!-- Footer Info -->
            <div id="footer_information" class="row mt32 mb32" style="margin-top:40px;">
                <!-- Phone -->
                <div t-if="o.company_id.phone" class="col-3 bm-2">
                     <strong style='font-size:20px;'>Phone</strong>
                    <p style='font-size:20px;' t-field="o.company_id.phone" class="m-0"/>
                </div>
                <!-- Email -->
                <div t-if="o.company_id.email" class="col-3 bm-2">
                     <strong style='font-size:20px;'>Email</strong>
                    <p style='font-size:20px;' t-field="o.company_id.email" class="m-0"/>
                </div>
                <!-- Website -->
                <div t-if="o.company_id.website" class="col-3 bm-2">
                     <strong style='font-size:20px;'>Website</strong>
                    <p style='font-size:20px;' t-field="o.company_id.website" class="m-0"/>
                </div>
                <!-- Sales TRN -->
                <div t-if="o.company_id.vat" class="col-3 bm-2">
                     <strong style='font-size:20px;'>Sales TRN</strong>
                    <p style='font-size:20px;' t-field="o.company_id.vat" class="m-0"/>
                </div>
            </div>
            </div>
            
                <!-- Footer Note -->
                <div style="margin-top:10px;">
                <p>if you have any questions concerning this invoice, contact our sales manager Mr. Mohamed Radwan, mob. 01223248892</p>
                <p>Allowed refund or change within 30 days from invoice date يحق الارتجاع أو الاستبدال في خلال 30 يوم من تاريخ الفاتورة</p>
                <h2 class="text-center">Thank You for Your Business</h2>
                </div>
                
            </div>
        </div>
       
    </template>
    
    
    <template id="report_payment_receipt">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.partner_id.lang"/>
                <t t-call="payment_receipt_report.report_payment_receipt_document" t-lang="lang"/>
            </t>
        </t>
    </template>
</odoo>
