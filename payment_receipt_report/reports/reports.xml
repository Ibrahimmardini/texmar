<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <record id="payment_receipt_paperformat" model="report.paperformat">
            <field name="name">Payment Receipt Paper Format</field>
            <field name="default" eval="True" />
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">45</field>
            <field name="header_spacing">43</field>
            <field name="margin_bottom">40</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False" />
            <field name="dpi">110</field>
        </record>


     <report
            string="Payment Receipt Report"
            id="account.action_report_payment_receipt"
            model="account.payment"
            report_type="qweb-pdf"
            name="payment_receipt_report.report_payment_receipt"
            file="payment_receipt_report.report_payment_receipt"
            paperformat="payment_receipt_report.payment_receipt_paperformat"
            menu="True"
        />

    </data>
</odoo>