<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="stock.report_delivery_document">
        <t t-call="web.basic_layout">
            <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)" />
            <t t-if="not o" t-set="o" t-value="doc"/>
            <t t-if="not company">
                <!-- Multicompany -->
                <t t-if="company_id">
                    <t t-set="company" t-value="company_id"/>
                </t>
                <t t-elif="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id.sudo()"/>
                </t>
                <t t-else="else">
                    <t t-set="company" t-value="res_company"/>
                </t>
            </t>
            <!-- Header -->
            <div class="header">
                <!-- Company Logo -->
                <div class="row" >
                    <div class="col-6" style="width: 200px;height:80px;overflow:hidden;">
                        <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" alt="Logo"
                             style="width:400px;height:400px;
                                 margin: -165px 0px 0px -120px"/>
                    </div>
                    <div class="col-6"/>
                </div>
                <!-- Company Address -->
                <div class="row">
                    <div class="col-6">
                        <h4 class="mt0" t-field="o.company_id.report_header"/>
                        <div name="company_address" class="mb4" style="color:grey">
                            <span class="company_address" t-field="o.company_id.partner_id"
                                  t-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'/>
                        </div>
                    </div>
                    <div class="col-6"/>
                </div>
            </div>
            <!-- Page -->
            <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)" />
            <t t-if="o.picking_type_id.code == 'incoming' ">
                <!-- INCOMING -->
                <div class="page" >
                    <div class="oe_structure"/>

                    <!-- Delivery Reference -->
                    <h1><span t-field="o.name"/></h1>

                    <div class="row" style="margin-top:40px;">
                        <!-- Vendor Details -->
                        <div class="col-6">
                            <strong >Vendor:</strong>
                            <p style='font-weight:bold' t-field="o.partner_id.name"/>
                            <p t-field="o.partner_id.street"/>
                            <p t-field="o.partner_id.country_id.name"/>
                            <p t-field="o.partner_id.phone"/>
                            <p t-field="o.partner_id.vat"/>
                        </div>
                        <!-- Shipping Details -->
                        <div class="col-6">
                            <strong >Shipping Address:</strong>
                            <p style='font-weight:bold' t-field="o.picking_type_id.warehouse_id.display_name"/>
                            <p t-field="o.picking_type_id.warehouse_id.partner_id.street"/>
                            <p t-field="o.picking_type_id.warehouse_id.partner_id.city"/>
                            <p t-field="o.picking_type_id.warehouse_id.partner_id.country_id.name"/>
                            <p t-field="o.picking_type_id.warehouse_id.partner_id.phone"/>
                        </div>
                    </div>

                    <!-- Info Div -->
                    <div id="information" class="row mt32 mb32" style="margin-top:40px;">
                        <!-- Shipping Date -->
                        <div class="col-3 bm-2">
                            <strong >Shipping Date:</strong>
                            <p t-field="o.scheduled_date" t-options='{"widget":"date"}' class="m-0"/>
                        </div>
                        <!-- Location -->
                        <div class="col-3 bm-2">
                            <strong >Location:</strong>
                            <p t-field="o.location_dest_id" class="m-0"/>
                        </div>
                        <!-- User Receiving -->
                        <div class="col-3 bm-2">
                            <strong >Responsible:</strong>
                            <p t-field="o.purchase_id and o.purchase_id.user_id and o.purchase_id.user_id.name" class="m-0"/>
                        </div>
                        <!-- Vendor Receipt -->
                        <div class="col-3 bm-2">
                            <strong >Vendor Receipt:</strong>
                            <p t-field="o.vendor_receipt" class="m-0"/>
                        </div>
                    </div>

                    <!-- Table -->
                    <div class="row">
                        <table class="table table-sm table-bordered o_main_table">
                            <thead>
                                <tr class="table-active text-center">
                                    <th >Code <br/> كود </th>
                                    <th >Description <br/> اسم الصنف </th>
                                    <th >FX No. <br/> رقم فاكس </th>
                                    <th >Deliver To <br/> مخزن رقم </th>
                                    <th >Unit <br/> الوحده </th>
                                    <th >Quantity <br/> الكمية </th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="total_qty" t-value="0.0"/>
                                <!-- Loop Order Lines -->
                                <t t-foreach="o.move_ids_without_package" t-as="line">
                                    <tr>
                                        <!-- Code -->
                                        <td style="text-align:center;"><span t-esc="line.product_id.default_code"/></td>
                                        <!-- Description -->
                                        <td style="text-align:center;"><span t-esc="line.product_id.name"/></td>
                                        <!-- FX No. -->
                                        <td style="text-align:center;"><span t-esc="line.fx_num_id and line.fx_num_id.name or ''"/></td>
                                        <!-- Deliver To / Location -->
                                        <td style="text-align:center;"><span t-field="o.picking_type_id"/></td>
                                        <!-- Unit -->
                                        <td style="text-align:center;"><span t-esc="line.product_uom and line.product_uom.name or ''"/></td>
                                        <!-- Quantity -->
                                        <td style="text-align:center;"><span t-esc="line.product_uom_qty"/></td>

                                        <!-- Quantity Total -->
                                        <t t-set="total_qty" t-value="line.product_uom_qty + total_qty"/>
                                    </tr>
                                </t>
                                <!-- QUANTITY TOTAL -->

                                <!-- Total Heading -->
                                <tr>
                                    <td style="text-align:center;"></td>
                                    <td style="text-align:center;"></td>
                                    <td style="text-align:center;"></td>
                                    <td style="text-align:center;"></td>
                                    <td style="text-align:center;"></td>
                                    <td style="text-align:center;font-weight:bold;">Total</td>
                                </tr>
                                <!-- Total Quantity Number -->
                                <tr>
                                    <td style="text-align:center;"></td>
                                    <td style="text-align:center;"></td>
                                    <td style="text-align:center;"></td>
                                    <td style="text-align:center;"></td>
                                    <td style="text-align:center;"></td>
                                    <td style="text-align:center;">
                                        <span t-esc="total_qty"/>
                                        <span t-esc="o.move_ids_without_package.product_uom.name"/>
                                    </td>
                                </tr>
                                <!-- Total Quantity Words + Unit -->
                                <tr>
                                    <td style="text-align:center;"></td>
                                    <td style="text-align:center;"></td>
                                    <td style="text-align:center;"></td>
                                    <td style="text-align:center;"></td>
                                    <td style="text-align:center;"></td>
                                    <td style="text-align:center;">
                                        <span t-esc="o.qty_in_words"/>
                                        <span t-esc="o.move_ids_without_package.product_uom.name"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                </div>
            </t>
            <t t-elif="o.picking_type_id.code == 'outgoing'">
                <t t-set="partner" t-value="o.partner_id or (o.move_lines and o.move_lines[0].partner_id) or False"/>
                <!-- OUTGOING -->
                <div class="page">
                    <div class="oe_structure"/>

                    <!-- Delivery Reference -->
                    <h1><span t-field="o.name"/></h1>

                    <div class="row" style="margin-top:40px;">
                        <!-- Customer Details -->
                        <div class="col-6">
                            <strong >Customer:</strong>
                            <p style='font-weight:bold' t-field="o.partner_id.name"/>
                            <p t-field="o.partner_id.street"/>
                            <p t-field="o.partner_id.country_id.name"/>
                            <p t-field="o.partner_id.phone"/>
                            <p t-field="o.partner_id.vat"/>
                        </div>
                        <!-- Shipping Details -->
                        <div class="col-6">
                            <strong >Shipping Address:</strong>
                            <p style='font-weight:bold' t-field="o.picking_type_id.warehouse_id.display_name"/>
                            <p t-field="o.picking_type_id.warehouse_id.partner_id.street"/>
                            <p t-field="o.picking_type_id.warehouse_id.partner_id.city"/>
                            <p t-field="o.picking_type_id.warehouse_id.partner_id.country_id.name"/>
                            <p t-field="o.picking_type_id.warehouse_id.partner_id.phone"/>
                        </div>
                    </div>

                    <!-- Info Div -->
                    <div id="information" class="row mt32 mb32" style="margin-top:40px;">
                        <!-- Shipping Date -->
                        <div class="col-3 bm-2">
                            <strong >Shipping Date:</strong>
                            <p t-field="o.scheduled_date" t-options='{"widget":"date"}' class="m-0"/>
                        </div>
                        <!-- Location -->
                        <div class="col-3 bm-2">
                            <strong >Location:</strong>
                            <p t-field="o.location_dest_id" class="m-0"/>
                        </div>
                        <!-- User Receiving -->
                        <div class="col-3 bm-2">
                            <strong >Responsible:</strong>
                            <p  t-field="o.purchase_id and o.purchase_id.user_id and o.purchase_id.user_id.name" class="m-0"/>
                        </div>
                        <!-- Customer Receipt -->
                        <div class="col-3 bm-2">
                            <strong >Customer Receipt:</strong>
                            <p t-field="o.customer_order_delivery" class="m-0"/>
                        </div>
                    </div>

                    <!-- Table -->
                    <div class="row">
                        <table class="table table-sm table-bordered o_main_table">
                            <thead>
                                <tr class="table-active text-center">
                                    <th>Code <br/> كود </th>
                                    <th>Description <br/> اسم الصنف </th>
                                    <th>FX No. <br/> رقم فاكس </th>
                                    <th>Deliver To <br/> مخزن رقم </th>
                                    <th>Unit <br/> الوحده </th>
                                    <th>Quantity <br/> الكمية </th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="total_qty" t-value="0.0"/>
                                <!-- Loop Order Lines -->
                                <t t-foreach="o.move_ids_without_package" t-as="line">
                                    <tr>
                                        <!-- Code -->
                                        <td style="text-align:center;"><span t-esc="line.product_id.default_code"/></td>
                                        <!-- Description -->
                                        <td style="text-align:center;"><span t-esc="line.product_id.name"/></td>
                                        <!-- FX No. -->
                                        <td style="text-align:center;"><span t-esc="line.fx_num_id and line.fx_num_id.name or ''"/></td>
                                        <!-- Deliver To / Location -->
                                        <td style="text-align:center;"><span t-field="o.picking_type_id"/></td>
                                        <!-- Unit -->
                                        <td style="text-align:center;"><span t-esc="line.product_uom and line.product_uom.name or ''"/></td>
                                        <!-- Quantity -->
                                        <td style="text-align:center;"><span t-esc="line.product_uom_qty"/></td>

                                        <!-- Quantity Total -->
                                        <t t-set="total_qty" t-value="line.product_uom_qty + total_qty"/>
                                    </tr>
                                </t>
                                <!-- QUANTITY TOTAL -->

                                <!-- Total Heading -->
                                <tr>
                                    <td style="text-align:center;"></td>
                                    <td style="text-align:center;"></td>
                                    <td style="text-align:center;"></td>
                                    <td style="text-align:center;"></td>
                                    <td style="text-align:center;"></td>
                                    <td style="text-align:center;font-weight:bold;">Total</td>
                                </tr>
                                <!-- Total Quantity Number -->
                                <tr>
                                    <td style="text-align:center;"></td>
                                    <td style="text-align:center;"></td>
                                    <td style="text-align:center;"></td>
                                    <td style="text-align:center;"></td>
                                    <td style="text-align:center;"></td>
                                    <td style="text-align:center;">
                                        <span t-esc="total_qty"/>
                                        <span t-esc="o.move_ids_without_package.product_uom.name"/>
                                    </td>
                                </tr>
                                <!-- Total Quantity Words + Unit -->
                                <tr>
                                    <td style="text-align:center;"></td>
                                    <td style="text-align:center;"></td>
                                    <td style="text-align:center;"></td>
                                    <td style="text-align:center;"></td>
                                    <td style="text-align:center;"></td>
                                    <td style="text-align:center;">
                                        <span t-esc="o.qty_in_words"/>
                                        <span t-esc="o.move_ids_without_package.product_uom.name"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                </div>
            </t>
            <t t-else="else" >
                <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)" />
                <t t-set="partner" t-value="o.partner_id or (o.move_lines and o.move_lines[0].partner_id) or False"/>
                <t t-if="partner" name="partner_header">
                    <t t-set="address">
                        <div t-esc="partner"
                             t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True}'/>
                    </t>
                </t>

                <div class="page">
                    <h2>
                        <span t-field="o.name"/>
                    </h2>
                    <div class="row mt32 mb32">
                        <div t-if="o.origin" class="col-auto" name="div_origin">
                            <strong>Order:</strong>
                            <p t-field="o.origin"/>
                        </div>
                        <div t-if="o.state" class="col-auto" name="div_sched_date">
                            <strong>Shipping Date:</strong>
                            <t t-if="o.state == 'done'">
                                <p t-field="o.date_done" t-options='{"widget": "date"}'/>
                            </t>
                            <t t-if="o.state != 'done'">
                                <p t-field="o.scheduled_date" t-options='{"widget": "date"}'/>
                            </t>
                        </div>
                    </div>
                    <table class="table table-sm" t-if="o.state!='done'" name="stock_move_table">
                        <thead>
                            <tr>
                                <th name="th_sm_product"><strong>Product</strong></th>
                                <th name="th_sm_quantity"><strong>Quantity</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="lines" t-value="o.move_lines.filtered(lambda x: x.product_uom_qty)"/>
                            <tr t-foreach="lines" t-as="move">
                                <td>
                                    <span t-field="move.product_id"/>
                                    <p t-if="move.description_picking != move.product_id.description and move.description_picking != move.product_id.name">
                                        <span t-field="move.description_picking"/>
                                    </p>
                                </td>
                                <td>
                                    <span t-field="move.product_uom_qty"/>
                                    <span t-field="move.product_uom"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <table class="table table-sm mt48" t-if="o.move_line_ids and o.state=='done'" name="stock_move_line_table">
                        <t t-set="has_serial_number" t-value="o.move_line_ids.mapped('lot_id')" />
                        <thead>
                            <tr>
                                <th name="th_sml_product"><strong>Product</strong></th>
                                <th name="lot_serial" t-if="has_serial_number" groups="stock.group_lot_on_delivery_slip">
                                    Lot/Serial Number
                                </th>
                                <th name="th_sml_quantity" class="text-center"><strong>Quantity</strong></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.move_line_ids" t-as="move_line">
                                <td>
                                    <span t-field="move_line.product_id"/>
                                    <p t-if="move_line.move_id.description_picking != move_line.product_id.description and move_line.move_id.description_picking != move_line.product_id.name">
                                        <span t-field="move_line.move_id.description_picking"/>
                                    </p>
                                </td>
                                <td t-if="has_serial_number and move_line.lot_name" groups="stock.group_lot_on_delivery_slip">
                                    <span t-field="move_line.lot_name"/>
                                </td>
                                <td t-elif="has_serial_number" groups="stock.group_lot_on_delivery_slip">
                                    <span t-field="move_line.lot_id.name"/>
                                </td>
                                <td class="text-center">
                                    <span t-field="move_line.qty_done"/>
                                    <span t-field="move_line.product_uom_id"/>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <p>
                        <t t-if="o.backorder_ids and o.backorder_ids.filtered(lambda x: x.state not in ('done', 'cancel'))">
                            All items couldn't be shipped, the remaining ones will be shipped as soon as they become available.
                        </t>
                    </p>
                </div>
            </t>
            <!-- footer -->
            <div class="footer">
                <!-- Footer Info -->
                <div id="footer_information" class="row mt32 mb32 text-center"
                     style="border-top:1px solid black;border-bottom:1px solid black;font-size:14px;">
                    <!-- Phone -->
                    <div class="col-3 bm-2" style="margin-top:5px;margin-bottom:5px;">
                        <p>Phone: <span t-field="o.company_id.phone"/></p>
                    </div>
                    <!-- Email -->
                    <div class="col-3 bm-2" style="margin-top:5px;margin-bottom:5px;">
                        <p>Email: <span t-field="o.company_id.email"/></p>
                    </div>
                    <!-- Website -->
                    <div class="col-3 bm-2" style="margin-top:5px;margin-bottom:5px;">
                        <p>Website: <span t-field="o.company_id.website"/></p>
                    </div>
                    <!-- Sales TRN -->
                    <div class="col-3 bm-2" style="margin-top:5px;margin-bottom:5px;">
                        <p>Sales TRN: <span t-field="o.company_id.vat"/></p>
                    </div>
                </div>

                <!-- Footer Note -->
                <!--                 <div style="margin-top:10px;">
                                <p>if you have any questions concerning this invoice, contact our sales manager Mr. Mohamed Radwan, mob. 01223248892</p>
                                <p>Allowed refund or change within 30 days from invoice date يحق الارتجاع أو الاستبدال في خلال 30 يوم من تاريخ الفاتورة</p>
                                <h2 class="text-center">Thank You for Your Business</h2>
                                </div> -->

                <!-- Footer Note -->
                <div style="font-size:14px;" class="text-center">
                    <p>if you have any questions concerning this invoice, contact our sales manager Mr. Mohamed Radwan, mob. 01223248892</p>
                    <p>Allowed refund or change within 30 days from invoice date يحق الارتجاع أو الاستبدال في خلال 30 يوم من تاريخ الفاتورة</p>
                    <h2 class="text-center">Thank You for Your Business</h2>
                </div>

            </div>
        </t>
    </template>
</odoo>
