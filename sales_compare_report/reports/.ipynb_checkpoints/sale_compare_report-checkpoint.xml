<odoo>
    <template id="report_sales_compare_document">
        <t t-call="web.external_layout">
            <div class="page"  style="font-size:15px;">
                <h3><strong>PREPARATION</strong></h3>
                <table class="table" style="width:100%;border-collapse: collapse;">
                        <thead>
                            <tr>
                                <th class="text-right"><span>Ser.</span></th>
                                <th class="text-right"><span>Code</span></th>
                                <th class="text-right"><span>Name</span></th>
                                <th class="text-right"><span>Color</span></th>
                                <th class="text-right"><span>Deliver Date</span></th>
                                <th class="text-right"><span>Qty</span></th>
                                <th class="text-center"><span>PO</span></th>
                                <th class="text-center"><span>Current Year</span></th>
                                <th class="text-center"><span>Last Years</span></th>
                                <th class="text-center"><span>Total</span></th>
                                <th class="text-center"><span>Request</span></th>
                                <th class="text-center"><span>PO Qty</span></th>
                            </tr>
                            <tr>
                                <th class="text-right"><span></span></th>
                                <th class="text-right"><span></span></th>
                                <th class="text-right"><span></span></th>
                                <th class="text-right"><span></span></th>
                                <th class="text-right"><span></span></th>
                                <th class="text-right"><span></span></th>
                                <th class="text-center">
                                    <span>PO </span>
                                    <span>| </span>
                                    <span>QTY </span>
                                    <span>| </span>
                                    <span>Deliver </span>
                                    <span>| </span>
                                    <span>Rest </span>
                                    <span>| </span>
                                    <span>Date </span>
                                    <span>| </span>
                                    <span>Status </span>
                                </th>
                                <th class="text-center">
                                    <span>Gallery </span>
                                    <span>| </span>
                                    <span>Dealer </span>
                                    <span>| </span>
                                    <span>Market </span>
                                </th>
                                <th class="text-center">
                                    <span>Gallery </span>
                                    <span>| </span>
                                    <span>Dealer </span>
                                    <span>| </span>
                                    <span>Market </span>
                                </th>
                                <th class="text-center"><span></span></th>
                                <th class="text-center"><span></span></th>
                                <th class="text-center"><span></span></th>
                            </tr>
                        </thead>
                    <tbody>
                        <t t-set="serial" t-value="1"/>
                        <t t-set="products" t-value="o.get_product_ids()"/>
                        <t t-foreach="products" t-as="product">
                                <div><span t-esc="serial"/></div>
                                <div><span t-esc="product.default_code"/></div>
                                <div><span t-esc="product.name"/></div>
                            <t t-set="lines" t-value="o.get_purchase_order(product)"/>
                            <t t-foreach="lines" t-as="line">
                                <t t-set="serial" t-value="serial + 1"/>
                            </t>
                        </t>
                    </tbody>
                </table>
            </div>
            </t>
    </template>
    
    <template id="report_sales_compare">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="sales_compare_report.report_sales_compare_document"/>
            </t>
        </t>
    </template>
</odoo>