        <record id="purchase_order_line_tree_inherit_report" model="ir.ui.view">
            <field name="name">purchase.order.line.tree.inherit.report</field>
            <field name="model">purchase.order.line</field>
            <field name="inherit_id" ref="purchase.purchase_order_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr = "." position = "replace" >
                    <tree string="Purchase Order Lines" create="false">
                        <field name="product_reference"/>
                        <field name="product_name"/>
                        <field name="product_color"/>
                        <field name="date_planned"  widget="date"/>
                        <field name="product_qty_on_hand"/>
                        <field name="order_id"/>
                        <field name="product_qty"/>
                        <field name="qty_received"/>
                        <field name="remaining_qty"/>
                        <field name="date_planned"  widget="date"/>
                        <field name="state"/>
                        <field name="product_gallery"/>
                        <field name="product_dealer"/>
                        <field name="product_market"/>
                </tree>
                </xpath>
            </field>
        </record>
        
        
        <record id="action_purchase_order_line" model="ir.actions.act_window">
            <field name="name">Prepartion Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.order.line</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_groupby_product': 1,'search_default_order_reference': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new order line.
                </p>
            </field>
        </record>
        
        <menuitem id="menu_action_purchase_order_line"  parent="purchase.purchase_report"
                  sequence="115" action="action_purchase_order_line"/>
    </data>
