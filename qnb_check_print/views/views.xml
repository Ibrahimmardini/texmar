<odoo>
  <data>
    <record id="view_account_payment_form_inherited2" model="ir.ui.view">
            <field name="name">account.payment.form.inherited2</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form" />
            <field name="arch" type="xml">
                <xpath expr="//button[@name='print_checks']" position="replace">
                    <button name="print_checks" class="oe_highlight" 
                            attrs="{'invisible': ['|', ('payment_method_code', '!=', 'check_printing'), 
                                   ('payment_method_code', '!=', 'received_third_check'),
                                   ('payment_method_code', '!=', 'delivered_third_check'),
                                   ('payment_method_code', '!=', 'issue_check'),
                                   ('state', '!=', 'posted')]}" string="Print Check" type="object"/>
                </xpath>
            </field>
        </record>
  </data>
</odoo>