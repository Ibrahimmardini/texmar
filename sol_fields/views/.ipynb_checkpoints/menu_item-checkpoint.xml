<odoo>
    <data>
        
        <record id="view_order_lines_tree" model="ir.ui.view">
            <field name="name">so.lines.tree</field>
            <field name="model">sale.order.line</field>
            <field name="arch" type="xml">
                <tree string="Order Lines Tree">
                    <field name="order_id" on_change="1" can_create="true" can_write="true" modifiers="{'required':true}"/>
                    <field name="order_partner_id" can_create="true" can_write="true" modifiers="{}"/>
                    <field name="name" modifiers="{'required':true}"/>
                    <field name="to_request"/>
                    <field name="salesman_id" can_create="true" can_write="true" modifiers="{'readonly':true}"/>
                    <field name="product_uom_qty" string="Qty" on_change="1" modifiers="{'required':true}"/>
                    <field name="qty_delivered" on_change="1" modifiers="{}"/>
                    <field name="qty_invoiced" on_change="1" modifiers="{'readonly':true}"/>
                    <field name="qty_to_invoice" modifiers="{'readonly':true}"/>
                    <field name="product_uom" string="Unit of Measure" on_change="1" can_create="true" can_write="true" invisible="1" modifiers="{'invisible':true,'column_invisible':true}"/>
                    <field name="route_id" options="{'no_create': True}" can_create="true" can_write="true" invisible="1" modifiers="{'invisible':true,'column_invisible':true}"/>
                    <field name="price_subtotal" sum="Total" widget="monetary" modifiers="{'readonly':true}"/>
                    <field name="sample_date" optional="show" modifiers="{}"/>
                    <field name="line_delivery_date" optional="show" modifiers="{}"/>
                    <field name="approval_status" optional="show" modifiers="{}"/>
                    <field name="line_status" optional="show" modifiers="{}"/>
                    <field name="is_cut" modifiers="{}"/>
                </tree>
            </field>
        </record>
        
        
        <record id="my_sales_order_line_filter" model="ir.ui.view">
            <field name="name">sale.order.line.select.inhert</field>
            <field name="model">sale.order.line</field>
            <field name="inherit_id" ref="sale.view_sales_order_line_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='my_sales_order_lines']" position="after">
                    <filter name="to_sell" string="Sell" domain="[('to_sell','=',True)]"/>
                    <filter name="to_request" string="Request" domain="[('to_request','=',True)]"/>
                </xpath>
            </field>
        </record>
        
        
        <record id="action_order_lines" model="ir.actions.act_window">
            <field name="name">Order Lines</field>
            <field name="res_model">sale.order.line</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_order_lines_tree"/>
            <field name="context">{'search_default_order': 1}</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Order Lines
              </p><p>
                Sale Order Lines
              </p>
            </field>
        </record>
        
        
        <menuitem
                id="menu_order_lines_tree" name="Order Lines"
                parent="sale.sale_order_menu"
                action="action_order_lines"/>
    </data>
</odoo>