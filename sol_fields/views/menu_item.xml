<odoo>
    <data>
        
        <record id="view_order_lines_tree" model="ir.ui.view">
            <field name="name">so.lines.tree</field>
            <field name="model">sale.order.line</field>
            <field name="arch" type="xml">
                <tree string="Order Lines Tree">
                </tree>
            </field>
        </record>
        
        
        <record id="action_order_lines" model="ir.actions.act_window">
            <field name="name">Order Lines</field>
            <field name="res_model">sale.order.line</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_order': 1}</field>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                Order Lines
              </p><p>
                Sale Order Lines
              </p>
            </field>
        </record>
        
        
        <menuitem
                id="menu_order_lines_tree" name="Order Lines"
                parent="sale.sale_order_menu"
                action="action_order_lines"/>
    </data>
</odoo>