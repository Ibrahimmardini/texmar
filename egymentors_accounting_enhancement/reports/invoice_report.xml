<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <template id="report_invoice_document_with_payments_new">
        <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)" />
        <t t-if="o.type == 'in_invoice'" t-call="egymentors_accounting_enhancement.vendor_bill_layout">
                 <div class="row" style="margin-top:40px;">
                <!-- Vendor Details -->
                <div class="col-6">
                    <strong style='font-size:20px;'>Vendor:</strong>
                    <p style='font-size:20px; font-weight:bold' t-field="o.partner_id.name"/>
                    <p style='font-size:20px;' t-field="o.partner_id.street"/>
                    <p style='font-size:20px;' t-field="o.partner_id.country_id.name"/>
                    <p style='font-size:20px;' t-field="o.partner_id.phone"/>
                    <p style='font-size:20px;' t-field="o.partner_id.vat"/>
                </div>
               
            </div>
              <!-- Header -->  
              <div class="page">
                    <div class="oe_structure"/>
                     <h1>Vendor Bill <span t-field="o.name"/></h1>
           
        <!--      Info Div                      -->
              <div id="information" class="row mt32 mb32" style="margin-top:40px;">
                <!-- Invocie Date -->
                <div t-if="o.invoice_date" class="col-3 bm-2">
                    <strong style='font-size:20px;'>Invoice Date:</strong>
                    <p style='font-size:20px;' t-field="o.invoice_date" class="m-0"/>
                </div>
                <!-- Vendor code -->
                <div t-if="o.partner_id.ref" class="col-3 bm-2">
                    <strong style='font-size:20px;'>Vendor code:</strong>
                    <p style='font-size:20px;' t-field="o.partner_id.ref" class="m-0"/>
                </div>
                <!-- Reference -->
                <div t-if="o.ref" class="col-3 bm-2">
                    <strong style='font-size:20px;'>Vendor Invoice Ref:</strong>
                    <p style='font-size:20px;' t-field="o.ref" class="m-0"/>
                </div>
            </div>      
                    <!-- Table Products-->
                    <div class="row">
                        <table class="table" style="width:100%;">
                            <thead>
                                <tr>
                                    <td style="text-align:center; font-weight:bold">code</td>
                                    <td style="text-align:center; font-weight:bold">Description</td>
                                    <td style="text-align:center;font-weight:bold">UOM</td>
                                    <td style="text-align:center;font-weight:bold">Qty</td>
                                    <td style="text-align:center;font-weight:bold">price</td>
                                    <td style="text-align:center;font-weight:bold">discount %</td>
                                    <td style="text-align:center;font-weight:bold">amount discount</td>
                                    <td style="text-align:center;font-weight:bold">final price product</td>
                                    <td style="text-align:center;font-weight:bold">Total untaxes</td>                                                                     <td style="text-align:center;font-weight:bold">Taxes</td>
                                    <td style="text-align:center;font-weight:bold">Total final Taxes</td>

                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="total_qty" t-value="0.0"/>
                                <t t-set="Total_product" t-value="0.0"/>
                                <t t-set="taxe_total" t-value="0.0"/>
                                <t t-set="Total_after_taxes" t-value="0.0"/>
                                <t t-set="taxes_product" t-value="0.0"/>
                                <t t-set="total_amount_dicount" t-value="0.0"/>
                                <t t-foreach="o.invoice_line_ids" t-as="line">
                                    <tr>
                                        <td style="text-align:center;"><span t-esc="line.product_id.default_code"/></td>
                                        <td style="text-align:center;"><span t-esc="line.product_id.name"/></td> 
                                        <td style="text-align:center;"><span t-field="line.product_id.uom_id"/></td>
                                        <td style="text-align:center;"><span t-esc="line.quantity"/></td>
                                         <t t-set="line.price_unit" t-value="round(line.price_unit,2)"/>
                                        <td style="text-align:center;"><span t-esc="line.price_unit"/></td>
                                        <!-- discount for one product -->
                                        <td style="text-align:center;">
                                            <t t-set="o.discount_rate" t-value="round(o.discount_rate,2)"/>
                                            <span t-esc="o.discount_rate">(%%)   
                                            </span>
                                        </td>
                                         <td style="text-align:center;">
                                            <t t-set="amount_discount" t-value="(o.discount_rate/100)*line.price_unit*line.quantity"/>
                                             <t t-set="amount_discount" t-value="round(amount_discount,2)"/> 
                                            <span t-esc="amount_discount">   
                                            </span>
                                        </td>
                                        <!-- price for product after discount -->
                                        <td style="text-align:center;">
                                        <t t-set="final_price_oneproduct" t-value="line.price_unit-(o.discount_rate/100)*line.price_unit"/>
                                        <t t-set="final_price_oneproduct" t-value="round(final_price_oneproduct,2)"/> 
                                            <span t-esc="final_price_oneproduct"/></td>
                                        <!-- price total product after discount-->
                                        <td style="text-align:center;">
                                        <t t-set="total_price_product" t-value="final_price_oneproduct*line.quantity"/>
                                        <t t-set="total_price_product" t-value="round(total_price_product,2)"/> 
                                           <span t-esc="total_price_product"/></td>
                                        <!-- value of taxes for one product and loop -->
                                        <td style="text-align:center;">
                                           <t t-set="taxes_product" t-value="0.0"/> 
                                           <t t-set="count" t-value="1"/>  
                                            <t t-foreach="line.tax_ids" t-as="tax_id">
                                                <t t-set="one_taxe_product" t-value="0.0"/>
                                                <t t-set="one_taxe_product" t-value="one_taxe_product+(tax_id.amount/100)*total_price_product"/> 
                                                <t t-set="one_taxe_product" t-value="round(one_taxe_product,2)"/> 
                                             <t t-if="count%2==0" >
                                                 <span class="text-nowrap" style="font-size:25px ;font-weight:bold"> , </span>   
                                                 <span class="text-nowrap" style="text-align:right;font-size:20px;" t-esc="one_taxe_product"/>
                                                <t t-set="count" t-value="count+1"/>  
                                              </t> 
                                             <t t-else="">
                                                 <span class="text-nowrap" style="text-align:right;font-size:20px;" t-esc="one_taxe_product"/>
                                                <t t-set="count" t-value="count+1"/> 
                                              </t> 
                                               <t t-set="taxes_product" t-value="taxes_product+one_taxe_product"/> 
                                            </t>
                                    </td>
                                            
                                        <!-- Amount after taxes -->
                                        <td style="text-align:center;">
                                        <t t-set="amount_taxes" t-value="taxes_product+total_price_product"/>
                                        <t t-set="amount_taxes" t-value="round(amount_taxes,2)"/>
                                        <span t-esc="amount_taxes"/></td>
                                        

                                        <t t-set="total_qty" t-value="total_qty + line.quantity"/>
                                        <t t-set="Total_product" t-value="Total_product+total_price_product"/>
                                        <t t-set="total_amount_dicount" t-value="total_amount_dicount+amount_discount"/>
                                       <t t-set="taxe_total" t-value="taxe_total+taxes_product"/> 
                                       <t t-set="Total_after_taxes" t-value="Total_after_taxes+amount_taxes"/> 
                                    </tr>
                                </t>
                                <tr>
                                    <td colspan="2" style="font-weight:bold">Total Products</td>
                                    <td ></td>
                                    <td style="text-align:center;">
                                        <t t-set="total_qty" t-value="round(total_qty,2)"/>
                                        <span t-esc="total_qty"/>
                                    </td>
                                    <td ></td>
                                    <td></td>
                                    <td style="text-align:center;">                                                                                                           <t t-set="total_amount_dicount" t-value="round(total_amount_dicount,2)"/>
                                        <span t-esc="total_amount_dicount"/>
                                    </td>
                                    <td></td>
                                    <td style="text-align:center;">
                                        <t t-set="Total_product" t-value="round(Total_product,2)"/>
                                        <span t-esc="Total_product"/>
                                    </td>
                                    <td style="text-align:center;">
                                        <t t-set="taxe_total" t-value="round(taxe_total,2)"/>
                                        <span t-esc="taxe_total"/>
                                    </td>
                                   <td style="text-align:center;">
                                        <t t-set="Total_after_taxes" t-value="round(Total_after_taxes,2)"/>
                                       <span t-esc="Total_after_taxes"/>
                                   </td>

                                </tr>
                            </tbody>
                        </table>
                    </div> 
                  <br/>
    <!-- Taxes Table -->
                    <h2 style="font-weight:bold">Taxes Details</h2>
                    <div class="row">
                        <table class="table" style="width:100%;border-collapse: collapse;">
                            <thead>
                                <tr>
                                    <td style="text-align:center;font-weight:bold">Name Taxe </td>
                                    <td style="text-align:center;font-weight:bold">The Rate</td>
                                    <td style="text-align:center;font-weight:bold">Tax Value</td>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="total_taxes" t-value="0.0"/>
                                <t t-set="taxes_product_tax" t-value="0.0"/>
                                <t t-foreach="o.amount_by_group" t-as="tax_line">
                                    <tr>
                                <t t-set="percentage" t-value="(tax_line[2] != 0) and ((tax_line[1]*100)/tax_line[2]) or 0"/>
                                        <!--Name Taxes -->
                                 <td style="text-align:center;"> <span t-esc="tax_line[0]"/></td>
                                      <!-- Rate -->  
                                    <td style="text-align:center;">
                                    <span t-esc="o.invoice_line_ids.tax_ids.search([('name','=',tax_line[0])],limit=1).description"/>
                                        </td>
<!--                                         <span t-esc="tax_line"/> -->
<!--                                      <t t-set="total_taxes" t-value="total_taxes + taxes_product_tax"/> -->
                                  <!-- Tax Value -->      
                                 <td style="text-align:center;"><span t-esc="tax_line[3]"/></td>       
                                 <t t-set="total_taxes" t-value="total_taxes + tax_line[1]"/>
  
                                    </tr>
                                </t>
                                  
                                <tr>
                                    <td colspan="2" style="font-weight:bold">Total_Taxes</td>
                                    <td style="text-align:center;"><span t-esc="total_taxes"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                  <br/>
                   <div class="row">
                    
                    <!-- NOTES -->
                    <div class="col-6">
                       <h3> <strong style='text-align:left;font-size:20px;'>Total Bill </strong></h3>
                    </div>
                    
                    <!-- TOTALS -->
                    <br/>   
                    <div class="col-6">
                        <table class="table">
                            <tbody>
                                <!-- Total -->
                                <tr>
                                    <td style="text-align:left;font-size:20px;"><strong>Total</strong></td>
                                    <td style="text-align:center;font-size:20px;"><span t-esc="o.amount_untaxed"/></td>
                                </tr>
                                
                                <!-- Sum Taxes  -->
                                        <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                        <tr>
                                            <t t-if="len(o.line_ids.filtered(lambda line: line.tax_line_id)) == 1 and o.amount_untaxed == amount_by_group[2]">
                                                <td><span style="text-align:center;font-size:20px;" t-esc="amount_by_group[0]"/></td>
                                                <td style="text-align:center;font-size:20px;">
                                                    <span style="text-align:center;font-size:20px;" t-esc="amount_by_group[3]" />
                                                </td>
                                            </t>
                                            <t t-else="">
                                                <td>
                                                    <span t-esc="amount_by_group[0]"/>
                                                    <span class="text-nowrap"> on
                                                        <t t-esc="amount_by_group[4]"/>
                                                    </span>
                                                </td>
                                                <td style="text-align:center;font-size:20px;">
                                                    <span style="text-align:center;font-size:20px;" t-esc="amount_by_group[3]"/>
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                <tr>
                                    
                                </tr>
                                <!-- Payment Installtion -->
                                <tr>
                                    <td style="text-align:left;font-size:20px;"><strong>Payment Installtion</strong></td>
                                    <td style="text-align:center;font-size:20px;"><span t-esc="o.amount_total-o.amount_residual"/>                                     </td>
                                </tr>
                                <!-- Due Amount -->
                                <tr>
                                    <td style="text-align:left;font-size:20px;"><strong>Due Amount</strong></td>
                                    <td style="text-align:center;font-size:20px;"><span t-esc="o.amount_residual"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                  
                </div>
            </t>
        <t t-elif="o.type == 'out_invoice'" t-call="egymentors_accounting_enhancement.customer_invoice_layout">
                <div class="page" style="font-size:24px;">
                    <div class="oe_structure"/>
                    <div class="row">
                        <div class="col-4">
                            <p><strong>Customer Name: </strong><span t-field="o.partner_id.name"/></p>
                            <p><strong>Source: </strong><span t-field="o.invoice_origin"/></p>
                            <p><strong>Date: </strong><span t-field="o.invoice_date"/></p>
                            <p><strong>Due Date: </strong><span t-field="o.invoice_date_due"/></p>
                        </div>
                        <div class="col-4"><h4 t-field='o.name'/></div>
                        <div class="col-4">
                        
                        </div>
                    </div>



                    <h2>Comments</h2>
                    <div class="row" style="font-size:22px;">
                        <table class="table" style="width:100%;border:2px solid black;border-collapse: collapse;">
                            <thead style="border: 2px solid black;">
                                <tr style="border-bottom: 2px solid black;">
                                    <td style="border-right: 2px solid black;text-align:center;"> Customer Code </td>
                                    <td style="border-right: 2px solid black;text-align:center;"> Po Number</td>
                                    <td style="border-right: 2px solid black;text-align:center;"> Payment Terms </td>
                                    <td style="border-right: 2px solid black;text-align:center;"> Sales Person </td>
                                    <td style="border-right: 2px solid black;text-align:center;"> Currency </td>
                                </tr>
                            </thead>
                            <tbody style="border: 2px solid black;">
                                <tr style="border-bottom: 2px solid black;">
                                    <td style="border-right: 2px solid black;text-align:center;"><span t-esc="o.partner_id and o.partner_id.ref or ''"/></td>
                                    <td style="border-right: 2px solid black;text-align:center;"><span t-esc="o.customer_order_invoice"/></td>
                                    <td style="border-right: 2px solid black;text-align:center;"><span t-field="o.invoice_payment_term_id"/></td>
                                    <td style="border-right: 2px solid black;text-align:center;"><span t-field="o.invoice_user_id"/></td>
                                    <td style="border-right: 2px solid black;text-align:center;"><span t-field="o.currency_id"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="row">
                        <table class="table" style="width:100%;border-collapse: collapse;">
                            <thead style="border: 2px solid black;">
                                <tr style="border-bottom: 2px solid black;">
                                    <td style="border-right: 2px solid black;text-align:center;">Code </td>
                                    <td style="border-right: 2px solid black;text-align:center;">Item Description </td>
                                    <td style="border-right: 2px solid black;text-align:center;">Width </td>
                                    <td style="border-right: 2px solid black;text-align:center;">Qty </td>
                                    <td style="border-right: 2px solid black;text-align:center;">Price </td>
                                    <td style="border-right: 2px solid black;text-align:center;">Amount </td>
                                </tr>
                            </thead>
                            <tbody style="border: 2px solid black;">
                                <t t-foreach="o.invoice_line_ids" t-as="line">
                                    <tr style="border-bottom: 2px solid black;">
                                        <td style="border-right: 2px solid black;text-align:center;"><span t-esc="line.product_id.default_code"/></td>
                                        <td style="border-right: 2px solid black;text-align:center;"><span t-esc="line.name"/></td>
                                        <td style="border-right: 2px solid black;text-align:center;"><span t-esc="line.product_id.texmar_width"/></td>
                                        <td style="border-right: 2px solid black;text-align:center;"><span t-esc="line.quantity"/></td>
                                        <td style="border-right: 2px solid black;text-align:center;"><span t-esc="line.price_unit"/></td>
                                        <td style="border-right: 2px solid black;text-align:center;"><span t-esc="line.price_subtotal"/></td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>

                    <div class="row">
                        <div class="row col-9">
                        </div>
                        <div class="col-3">
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <td style="text-align:right;"><strong>Total</strong></td>
                                        <td style="text-align:center;"><span t-field="o.amount_untaxed"/></td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:right;"><strong>Discount</strong></td>
                                        <td style="text-align:center;"><span t-field="o.amount_discount"/></td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:right;"><strong>Subtotal</strong></td>
                                        <td style="text-align:center;"><span t-esc="o.amount_untaxed - o.amount_discount"/></td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:right;"><strong>Add value tax 14%</strong></td>
                                        <td style="text-align:center;"><span t-field="o.amount_tax"/></td>
                                    </tr>
                                    <tr>
                                        <td style="text-align:right;"><strong>Total Due</strong></td>
                                        <td style="text-align:center;"><span t-field="o.amount_total"/></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </t>
        <t t-else="else" t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)" />
                <t t-set="address">
                    <address t-field="o.partner_id" t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                    <div t-if="o.partner_id.vat" class="mt16">
                        <t t-if="o.company_id.country_id.vat_label" t-esc="o.company_id.country_id.vat_label" id="inv_tax_id_label"/>
                        <t t-else="">Tax ID</t>: <span t-field="o.partner_id.vat"/></div>
                </t>
                <div class="page">
                    <h2>
                        <span t-if="o.type == 'out_invoice' and o.state == 'posted'">Invoice</span>
                        <span t-if="o.type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                        <span t-if="o.type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                        <span t-if="o.type == 'out_refund'">Credit Note</span>
                        <span t-if="o.type == 'in_refund'">Vendor Credit Note</span>
                        <span t-if="o.type == 'in_invoice'">Vendor Bill</span>
                        <span t-if="o.name != '/'" t-field="o.name"/>
                    </h2>

                    <div id="informations" class="row mt32 mb32">
                        <div class="col-auto mw-100 mb-2" t-if="o.invoice_date" name="invoice_date">
                            <strong>Invoice Date:</strong>
                            <p class="m-0" t-field="o.invoice_date"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" t-if="o.invoice_date_due and o.type == 'out_invoice' and o.state == 'posted'" name="due_date">
                            <strong>Due Date:</strong>
                            <p class="m-0" t-field="o.invoice_date_due"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" t-if="o.invoice_origin" name="origin">
                            <strong>Source:</strong>
                            <p class="m-0" t-field="o.invoice_origin"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" t-if="o.partner_id.ref" name="customer_code">
                            <strong>Customer Code:</strong>
                            <p class="m-0" t-field="o.partner_id.ref"/>
                        </div>
                        <div class="col-auto mw-100 mb-2" t-if="o.ref" name="reference">
                            <strong>Reference:</strong>
                            <p class="m-0" t-field="o.ref"/>
                        </div>
                    </div>

                    <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>

                    <table class="table table-sm o_main_table" name="invoice_line_table">
                        <thead>
                            <tr>
                                <!-- TODO: remove in master -->
                                <t t-set="colspan" t-value="6"/>
                                <th name="th_description" class="text-left"><span>Description</span></th>
                                <!-- TODO: remove in master -->
                                <th name="th_source" class="d-none text-left" t-if="0"><span>Source Document</span></th>
                                <th name="th_quantity" class="text-right"><span>Quantity</span></th>
                                <th name="th_priceunit" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Unit Price</span></th>
                                <th name="th_price_unit" t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <span>Disc.%</span>
                                    <!-- TODO: remove in master -->
                                    <t t-set="colspan" t-value="colspan+1"/>
                                </th>
                                <th name="th_taxes" t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>Taxes</span></th>
                                <th name="th_subtotal" class="text-right">
                                    <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>
                                    <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="invoice_tbody">
                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                            <t t-foreach="lines" t-as="line">
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                        <td name="account_invoice_line_name"><span t-field="line.name" t-options="{'widget': 'text'}"/></td>
                                        <td class="text-right">
                                            <span t-field="line.quantity"/>
                                            <span t-field="line.product_uom_id"  groups="uom.group_uom"/>
                                        </td>
                                        <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span class="text-nowrap" t-field="line.price_unit"/>
                                        </td>
                                        <td t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span class="text-nowrap" t-field="line.discount"/>
                                        </td>
                                        <td t-attf-class="text-left {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_ids))" id="line_tax_ids"/>
                                        </td>
                                        <td class="text-right o_price_total">
                                            <span class="text-nowrap" t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                            <span class="text-nowrap" t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td colspan="99">
                                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="current_subtotal" t-value="0"/>
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td colspan="99">
                                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                        </td>
                                    </t>
                                </tr>

                                <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                                    <tr class="is-subtotal text-right">
                                        <td colspan="99">
                                            <strong class="mr16">Subtotal</strong>
                                            <span
                                                t-esc="current_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                            />
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>

                    <div class="clearfix">
                        <div id="total" class="row">
                            <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ml-auto">
                                <table class="table table-sm" style="page-break-inside: avoid;">
                                    <tr class="border-black o_subtotal" style="">
                                        <td><strong>Subtotal</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.amount_untaxed"/>
                                        </td>
                                    </tr>
                                    <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                        <tr style="">
                                            <t t-if="len(o.line_ids.filtered(lambda line: line.tax_line_id)) == 1 and o.amount_untaxed == amount_by_group[2]">
                                                <td><span class="text-nowrap" t-esc="amount_by_group[0]"/></td>
                                                <td class="text-right o_price_total">
                                                    <span class="text-nowrap" t-esc="amount_by_group[3]" />
                                                </td>
                                            </t>
                                            <t t-else="">
                                                <td>
                                                    <span t-esc="amount_by_group[0]"/>
                                                    <span class="text-nowrap"> on
                                                        <t t-esc="amount_by_group[4]"/>
                                                    </span>
                                                </td>
                                                <td class="text-right o_price_total">
                                                    <span class="text-nowrap" t-esc="amount_by_group[3]"/>
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                    <tr class="border-black o_total">
                                        <td><strong>Total</strong></td>
                                        <td class="text-right">
                                            <span class="text-nowrap" t-field="o.amount_total"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <p t-if="o.type in ('out_invoice', 'in_refund')">
                        Please use the following communication for your payment : <b><span t-field="o.invoice_payment_ref"/></b>
                    </p>
                    <p t-if="o.narration" name="comment">
                        <span t-field="o.narration"/>
                    </p>
                    <p t-if="o.invoice_payment_term_id" name="payment_term">
                        <span t-field="o.invoice_payment_term_id.note"/>
                    </p>
                    <p t-if="o.fiscal_position_id.note" name="note">
                        <span t-field="o.fiscal_position_id.note"/>
                    </p>
                    <div id="qrcode" t-if="(o.company_id.qr_code) and (o.currency_id.name == 'EUR') and (o.invoice_partner_bank_id.acc_number != False)">
                        <p t-if="(o.invoice_partner_bank_id.qr_code_valid)">
                            <strong class="text-center">Scan me with your banking app.</strong><br /><br />
                            <img class="border border-dark rounded" t-att-src="o.invoice_partner_bank_id.build_qr_code_url(o.amount_residual,(o.ref) if (o.ref) else o.name)"/>
                        </p>
                        <p t-if="(o.invoice_partner_bank_id.qr_code_valid == False)">
                            <strong class="text-center">The SEPA QR Code informations are not set correctly.</strong><br />
                        </p>
                    </div>
                </div>
            </t>
    </template>

